<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_vendor_shop_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/shop"></ImageView>

        <RatingBar
            android:id="@+id/rb_vendor_shop"
            style="@style/customRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:rating="3"
            android:layout_marginStart="10dp"
            android:isIndicator="true"
            android:clickable="false"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="187dp"></RatingBar>

        <TextView
            android:id="@+id/tv_vendor_shop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:layout_marginStart="10dp"
            android:drawableLeft="@drawable/ic_outline_location_on_24"
            android:drawablePadding="20dp"
            android:text="Shekhar central Palasia"
            android:textColor="@color/lightBlack"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/tv_vendor_shop_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/gilroy_semibold"
            android:layout_marginStart="10dp"
            android:autoLink="all"
            android:drawableLeft="@drawable/ic_outline_call_24"
            android:drawablePadding="20dp"
            android:text="+91 0987654321"
            android:textColor="@color/lightBlack"
            android:textSize="18sp"></TextView>


        <TextView
            android:id="@+id/tv_vendor_shop_mailid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/gilroy_semibold"
            android:autoLink="all"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:drawablePadding="20dp"
            android:text="shop@gmail.com"
            android:textColor="@color/lightBlack"
            android:textSize="18sp"></TextView>
    </LinearLayout>
</androidx.cardview.widget.CardView>