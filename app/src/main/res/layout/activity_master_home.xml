<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MasterHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/men_1"></ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/basket_1"></ImageView>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="@string/HelloJohn"
                    android:textColor="@color/lightBlack"
                    android:textSize="36sp"></TextView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_search_home1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:drawableLeft="@drawable/ic_search_black_24"
                        android:drawablePadding="10dp"
                        android:hint="@string/search"
                        android:padding="8dp"
                        android:singleLine="true"></EditText>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"

                    android:orientation="horizontal"
                    android:weightSum="5">

                    <ImageView
                        android:id="@+id/iv_masterhome_sale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/sales_1"></ImageView>

                    <ImageView
                        android:id="@+id/iv_hand"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/service_1"></ImageView>

                    <ImageView
                        android:id="@+id/iv_food"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/grocery_1"></ImageView>

                    <ImageView
                        android:id="@+id/iv_shopping_cart"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/taxi_1"></ImageView>


                    <ImageView
                        android:id="@+id/iv_grocery"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/food_1"></ImageView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Sales"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Services"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Grocery"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="@string/cabtaxi"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"></TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/gilroy_semibold"
                        android:text="Food"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"></TextView>
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_margin="10dp"
                    android:padding="5dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_home1_taxi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp"
                        app:cardPreventCornerOverlap="false"
                        app:cardUseCompatPadding="true"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <com.asksira.loopingviewpager.LoopingViewPager
                            android:id="@+id/view_pager_master_home"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/taxi"
                            app:autoScroll="false"
                            app:isInfinite="true"
                            app:scrollInterval="2000"></com.asksira.loopingviewpager.LoopingViewPager>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:layout_margin="20dp"
                                android:fontFamily="sans-serif-light"
                                android:gravity="bottom"
                                android:text="Taxi"
                                android:textColor="@color/colorWhite"
                                android:textSize="32dp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <include layout="@layout/master_home_content"></include>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>