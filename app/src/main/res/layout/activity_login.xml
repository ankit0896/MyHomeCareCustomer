<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLighWhite"
    tools:context=".view.activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLighWhite"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLighWhite">

            <ImageView
                android:id="@+id/iv_login_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_chevron_left_24"></ImageView>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/gilroy_bold"
            android:text="@string/login"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/colorBlack"
            android:textSize="35sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="2dp"
                android:background="@color/colorWhite"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_login_email"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="4.5"
                        app:hintTextColor="@color/colorGrey"
                        android:hint="@string/email"
                        android:padding="5dp">


                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/tie_login_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:fontFamily="@font/gilroy_light"
                            android:paddingTop="4dp"
                            android:singleLine="true"
                            android:textSize="16sp"></com.google.android.material.textfield.TextInputEditText>


                    </com.google.android.material.textfield.TextInputLayout>

                    <ImageView
                        android:id="@+id/iv_email_check"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/check_24"
                        android:visibility="invisible"></ImageView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="2dp"
                android:background="@color/colorWhite">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:hint="@string/password"
                    app:hintTextColor="@color/colorGrey"
                    android:padding="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_login_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:fontFamily="@font/gilroy_light"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:textSize="16sp"></com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:drawableRight="@drawable/ic_baseline_arrow_right_alt_24"
                android:drawablePadding="4dp"
                android:fontFamily="@font/gilroy_light"
                android:text="@string/forgotPassword"
                android:textColor="@color/colorBlack"
                android:textSize="14dp"></TextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_login_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:background="@color/colorRed"
                app:cardBackgroundColor="@color/colorRed"
                app:cardCornerRadius="22dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gilroy_semibold"
                    android:padding="12dp"
                    android:text="@string/login"
                    android:textAlignment="center"

                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"></TextView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/gilroy_light"
            android:layout_marginTop="100dp"
            android:text="@string/otherLogin"
            android:textColor="@color/colorBlack"></TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@color/colorLighWhite"
            android:layout_marginBottom="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="22dp">

                <ImageView
                    android:id="@+id/iv_login_google"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/google"></ImageView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="22dp">

                <ImageView
                    android:id="@+id/iv_login_facebook"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/fb"></ImageView>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>